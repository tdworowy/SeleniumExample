pipeline {
    agent { label 'master'}
    stages {
      stage("Clean workspace"){
                steps {
                    cleanWs()
                }
            }
     stage("Pull changes from git"){
               steps{
                    git 'https://github.com/tdworowy/SeleniumExample.git'
                }
            }
      stage('Run Tests')
        {
             steps{
                    dir('java') {
                        bat 'mvn clean test'
                    }
                }
          }
         }
      post {
        always {
          junit "java\\target\\surefire-reports\\*.xml"
          archive  "java\\target\\surefire-reports\\*"
          archive  "java\\target\\cucumber-reports\\*"
          archive  "java\\TestLogs\\*\\*"
        }
      }
}